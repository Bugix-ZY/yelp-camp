<%include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-1"> Campgrounds Page</h1>
            <p> Lorem ipsum dolor sit amet consectetur adipisicing elit. Error temporibus velit amet provident nihil facere iure quae necessitatibus doloribus eligendi.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg"> ADD NEW CAMPGROUND</a>
            </p>
        </div>
    </header>

    <div class="container mt-5">
        <div class="row">
        <% campgrounds.forEach(function(camp){ %>
            <div class="card col-sm-6 col-md-3">
                <img class="card-img-top" src=<%= camp.image %> >
                <div class="card-body">
                    <p class="card-text"> <%= camp.name %> </p>
                </div>
            </div>
        <% }); %>
        </div>
    </div>

</div>


<%include partials/footer %>